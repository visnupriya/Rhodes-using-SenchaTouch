<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @contact.object %>
    <h1>Edit <%= @contact.name_email_id_message%></h1>
    <%= link_to "Delete", :action => :delete, :id => @contact.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name email id message: </td>
              <td class="itemValue"><input type="text" name="contact[name_email_id_message]" value="<%= @contact.name_email_id_message %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
