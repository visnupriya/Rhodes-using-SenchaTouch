<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @contact.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="contact[name_email_id_message]" class="fieldLabel">Name email id message</label>
            <input type="text" id="contact[name_email_id_message]" name="contact[name_email_id_message]" <%= placeholder("Name email id message") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
