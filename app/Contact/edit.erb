<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @contact.name_email_id_message %></h1>
    <a href="<%= url_for :action => :show, :id => @contact.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @contact.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="contact[name_email_id_message]" class="fieldLabel">Name email id message</label>
            <input type="text" id="contact[name_email_id_message]" name="contact[name_email_id_message]" value="<%= @contact.name_email_id_message %>" <%= placeholder( "Name email id message" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
